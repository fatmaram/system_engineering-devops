#!/usr/bin/env bash
# This script lists files in the current directory, showing only the part after the first dash (-)

for file in *; do
  # Skip hidden files
  if [[ $file == .* ]]; then
    continue
  fi

  # If the filename contains a dash, strip everything up to the first dash
  if [[ $file == *-* ]]; then
    echo "${file#*-}"
  else
    # Otherwise, just print the filename as is
    echo "$file"
  fi
done
